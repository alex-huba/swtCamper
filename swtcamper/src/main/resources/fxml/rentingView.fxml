<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="505.0" prefWidth="644.0" stylesheets="@../styles/rentingview.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="swtcamper.javafx.controller.RentingViewController">
   <children>
      <HBox prefHeight="169.0" prefWidth="644.0" styleClass="searchBar">
         <children>
            <HBox layoutX="178.0" layoutY="89.0" prefHeight="247.0" spacing="5.0">
               <children>
                  <VBox prefWidth="140.0" spacing="5.0">
                     <children>
                        <HBox spacing="2.0">
                           <children>
                              <ComboBox fx:id="vehicleTypeComboBox" promptText="Vehicle Type" />
                              <Button mnemonicParsing="false" onAction="#resetVehicleTypeComboBox" text="X" />
                           </children>
                        </HBox>
                        <TextField fx:id="vehicleBrandTextField" promptText="Vehicle Brand" />
                        <TextField fx:id="constructionYearTextField" promptText="Construction year" />
                        <TextField fx:id="maxPricePerDayTextField" promptText="Max. price per day" />
                        <TextField fx:id="locationTextField" promptText="Location" />
                        <CheckBox fx:id="min21CheckBox" mnemonicParsing="false" text="min age 21" />
                     </children>
                  </VBox>
                  <VBox prefWidth="140.0" spacing="5.0">
                     <children>
                        <TextField fx:id="engineTextField" promptText="Engine" />
                        <HBox spacing="2.0">
                           <children>
                              <ComboBox fx:id="transmissionComboBox" promptText="Transmission" />
                              <Button mnemonicParsing="false" onAction="#resetTransmissionTypeComboBox" text="X" />
                           </children>
                        </HBox>
                        <TextField fx:id="seatAmountTextField" promptText="Nr. of seats" />
                        <TextField fx:id="bedAmountTextField" promptText="Nr. of beds" />
                        <CheckBox fx:id="crossBordersCheckBox" mnemonicParsing="false" text="cross borders" />
                        <CheckBox fx:id="payCashCheckBox" mnemonicParsing="false" text="pay in cash" />
<!--                        <TextField fx:id="keywordTextField" promptText="Keywords" />-->
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" prefHeight="171.0" prefWidth="150.0" spacing="5.0">
                     <children>
                        <CheckBox fx:id="excludeInactiveCheckBox" mnemonicParsing="false" text="Exclude inactive offers" />
                        <CheckBox fx:id="roofTentCheckBox" mnemonicParsing="false" text="Roof tent" />
                        <CheckBox fx:id="roofRackCheckBox" mnemonicParsing="false" text="Roof rack" />
                        <CheckBox fx:id="bikeRackCheckBox" mnemonicParsing="false" text="Bike rack" />
                        <CheckBox fx:id="showerCheckBox" mnemonicParsing="false" text="Shower" />
                        <CheckBox fx:id="toiletCheckBox" mnemonicParsing="false" text="Toilet" />
                        <CheckBox fx:id="kitchenCheckBox" mnemonicParsing="false" text="Kitchen" />
                        <CheckBox fx:id="fridgeCheckBox" mnemonicParsing="false" text="Fridge" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox alignment="BOTTOM_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
               <children>
                  <Button fx:id="searchButton" mnemonicParsing="false" onAction="#startSearch" prefWidth="60.0" styleClass="btn" text="search">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" top="10.0" />
         </padding>
      </HBox>
      <Label layoutX="3.0" layoutY="191.0" styleClass="heading" text="Let's find a perfect camper van for You!">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <ListView fx:id="offersList" layoutY="218.0" prefHeight="287.0" prefWidth="644.0" />
   </children>
</Pane>
