<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<BorderPane prefHeight="560.0" prefWidth="751.0" stylesheets="@../styles/myOffers.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="swtcamper.javafx.controller.MyOffersViewController">
    <center>
        <ScrollPane fx:id="offersList" BorderPane.alignment="CENTER" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER">
            <content>
                <VBox fx:id="offerListRoot" alignment="CENTER" spacing="20" />
            </content>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </ScrollPane>
    </center>
    <top>
        <ToolBar BorderPane.alignment="CENTER">
            <items>
                <Button fx:id="placeOfferButton" onAction="#placeOfferAction" styleClass="bg-primary" text="Neues Angebot" />
            </items>
        </ToolBar>
    </top>
</BorderPane>
