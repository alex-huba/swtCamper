            <Label text="Phone" styleClass="inputPhoneLabel"/>
            <TextField promptText="e.g., 0049172876543" fx:id="phoneTf"/>
        </HBox>
        <HBox layoutX="110" layoutY="315" styleClass="hBoxField">
            <Label text="Name" styleClass="inputNameLabel"/>
            <TextField promptText="Only letters allowed" fx:id="nameTf"/>
        </HBox>
        <HBox layoutX="110" layoutY="360" styleClass="hBoxField">
            <Label text="Surname" styleClass="inputSurnameLabel"/>
            <TextField promptText="Only letters allowed" fx:id="surnameTf"/>
        </HBox>
        <HBox layoutX="110" layoutY="405" styleClass="hBoxField">
            <RadioButton text="I'm an operator" fx:id="operatorRb" styleClass="operatorRb"/>
        </HBox>
        <HBox layoutX="230" layoutY="480" styleClass="hBoxField">
            <Button text="cancel" fx:id="cancelBtn" onAction="#handleCancelBtn" styleClass="cancelBtn"/>
