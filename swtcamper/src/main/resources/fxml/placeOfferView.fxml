   <!--   Buttons Place Offer, Cancel-->
   <Button fx:id="cancelButton" layoutX="482.0" layoutY="550.0" onAction="#cancelAction" text="Cancel" />
   <Label text="sdf"  layoutX="390" layoutY="530" styleClass="errorMessage" fx:id="errorLabel"/>
   <Button fx:id="placeOfferButton" layoutX="401.0" layoutY="550.0" onAction="#placeOfferAction" text="Place Offer" />
