<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="30.0" styleClass="rootNodeBackground" stylesheets="@../styles/resetpassword_view.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="swtcamper.javafx.controller.ResetPasswordViewController">
    <children>
        <Label styleClass="heading" text="Passwort zurücksetzen" />
        <Label fx:id="errorMessageLabel" styleClass="errorMessage" />

        <TextField fx:id="usernameTf" onKeyTyped="#validateUsernameTf" promptText="Nutzername" styleClass="inputField" />
        <TextField fx:id="emailTf" onKeyTyped="#validateEmailTf" promptText="E-mail" styleClass="inputField" />
        <PasswordField fx:id="passwordPf" onKeyTyped="#validatePasswordPf" promptText="Passwort" styleClass="inputField" />
        <PasswordField fx:id="repeatPasswordPf" onKeyTyped="#validateRepeatPasswordPf" promptText="Passwort wiederholen" styleClass="inputField" />
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
      
              <Button fx:id="resetButton" mnemonicParsing="false" onAction="#resetPassword" styleClass="radius-20, bg-lightGreen" text="Zurücksetzen" />
              <Button mnemonicParsing="false" onAction="#cancelReset" styleClass="radius-20, bg-danger" text="Abbrechen" />
         </children>
      </HBox>
    </children>
   <padding>
      <Insets right="10.0" />
   </padding>
</VBox>
