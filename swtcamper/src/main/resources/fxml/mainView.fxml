<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="600.0"
            styleClass="rootNodeBackground" stylesheets="@../styles/global.css" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="swtcamper.javafx.controller.MainViewController">
    <left>
        <fx:include source="navigationView.fxml"/>
    </left>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" BorderPane.alignment="CENTER">
            <content>
                <AnchorPane fx:id="mainStage">
                    <children>
                        <fx:include fx:id="homeViewBox" source="rentingView.fxml" AnchorPane.bottomAnchor="0.0"
                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                    AnchorPane.topAnchor="0.0"/>
                        <fx:include fx:id="placeOfferViewBox" source="modifyOfferView.fxml" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0"/>
                        <fx:include fx:id="activeOffersViewBox" source="myOffersView.fxml" AnchorPane.bottomAnchor="0.0"
                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                    AnchorPane.topAnchor="0.0"/>
                        <fx:include fx:id="offerViewBox" source="offerView.fxml" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0"/>
                        <Pane fx:id="dealHistoryViewBox">
                            <Label style="-fx-text-fill: #FFF" text="Deal History"/>
                            <!--                            TODO after Merging: include-->
                            <!--                            <fx:include source="dealHistoryView.fxml" />-->
                        </Pane>
                        <Pane fx:id="excludeRenterViewBox">
                            <Label style="-fx-text-fill: #FFF" text="Exclude Renters"/>
                            <!--                            TODO after Merging: include-->
                            <!--                            <fx:include source="excludeRenterView.fxml" />-->
                        </Pane>
                        <fx:include fx:id="approveDealViewBox" source="approveNewProvidersView.fxml"/>
                        <fx:include fx:id="myBookingsViewBox" source="myBookingsView.fxml" AnchorPane.bottomAnchor="0.0"
                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                    AnchorPane.topAnchor="0.0"/>
                        <fx:include fx:id="loginViewBox" source="loginView.fxml" AnchorPane.bottomAnchor="0.0"
                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                    AnchorPane.topAnchor="0.0"/>
                        <fx:include fx:id="accountViewBox" source="accountView.fxml" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0"/>
                        <fx:include fx:id="registerViewBox" source="registerView.fxml" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0"/>
                        <fx:include fx:id="forgotPasswordViewBox" source="resetPasswordView.fxml"
                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
                        <fx:include fx:id="moreAboutOfferViewBox" source="moreAboutOfferView.fxml"
                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
