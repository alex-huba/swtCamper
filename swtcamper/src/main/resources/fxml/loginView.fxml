<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" styleClass="rootNode" stylesheets="/styles/loginview.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="swtcamper.javafx.controller.LoginViewController">
    <children>
        <Label layoutX="225.0" layoutY="10.0" styleClass="header" text="Login" />
        <Label fx:id="errorLabel" layoutX="140" layoutY="90" styleClass="errorMessage" text="" />
      <VBox prefHeight="200.0" prefWidth="100.0" />
      <VBox layoutX="50.0" layoutY="147.0" spacing="10.0">
         <children>
              <HBox styleClass="hBoxField">
                  <Label styleClass="usernameLabel,descriptionLabel" text="Username" />
                  <TextField fx:id="usernameTf" promptText="username" styleClass="inputField" />
<!--                             onKeyPressed="#handleEnter"-->
              </HBox>
              <HBox styleClass="hBoxField">
                  <Label styleClass="passwordLabel,descriptionLabel" text="Password" />
                  <PasswordField fx:id="passwordPf" promptText="password" styleClass="inputField" onKeyReleased="#handleEnterKey" />
              </HBox>
              <Button fx:id="loginButton" onAction="#handleLogin" styleClass="btnLogin,Button" text="login" />
              <Button fx:id="forgotPasswordButton" onAction="#handleForgotPassword" styleClass="btnForgotPassword" text="Forgot your password?" />
              <VBox styleClass="vBoxField">
                  <Label styleClass="descriptionLabel" text="Have no account yet?" />
                  <Button fx:id="registerButton" onAction="#handleRegister" styleClass="btnRegister" text="sign up" />
              </VBox>
         </children>
      </VBox>
    </children>
</AnchorPane>
