            <Label text="Username" styleClass="usernameLabel"/>
            <TextField promptText="username" fx:id="usernameTf"/>
        </HBox>
        <HBox layoutX="110" layoutY="200" styleClass="hBoxField">
            <Label text="Password" styleClass="passwordLabel"/>
            <PasswordField promptText="password" fx:id="passwordPf"/>
        </HBox>
        <Button text="login" fx:id="loginButton" layoutX="250" layoutY="275" styleClass="btnLogin" onAction="#handleLogin"/>
        <VBox layoutX="370" layoutY="500" styleClass="vBoxField">
            <Label text="Have no account yet?" />
            <Button text="sign up" fx:id="registerButton" styleClass="btnRegister" onAction="#handleRegister"/>
        </VBox>
    </children>
</AnchorPane>
