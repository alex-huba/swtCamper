<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="580.0" prefWidth="644.0" styleClass="rootNodeBackground" stylesheets="/styles/global.css, /styles/loginview.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="swtcamper.javafx.controller.LoginViewController">

   <top>
      <VBox spacing="15.0">
         <HBox alignment="TOP_CENTER">
            <Label styleClass="heading" text="Login" />
         </HBox>
         <HBox alignment="TOP_CENTER">
            <Label fx:id="errorLabel" styleClass="errorMessage, text-danger" text="errorLabel" />
         </HBox>
      </VBox>
   </top>

   <center>
      <VBox alignment="CENTER" spacing="30">
         <children>
            <HBox alignment="CENTER" spacing="20">
               <children>
                  <Label prefWidth="120.0" styleClass="descriptionLabel" text="Nutzername" />
                  <TextField fx:id="usernameTf" promptText="Nutzername" styleClass="inputField" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
               <children>
                  <Label prefWidth="120.0" styleClass="descriptionLabel" text="Passwort" />
                  <PasswordField fx:id="passwordPf" onKeyReleased="#handleEnterKey" promptText="Passwort" styleClass="inputField" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <Button fx:id="loginButton" onAction="#handleLogin" styleClass="Button, bg-lightGreen, radius-20, border-dark" text="Login" />
            </HBox>
         </children>
      </VBox>
   </center>

   <bottom>
      <VBox spacing="20">
         <children>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <Label styleClass="descriptionLabel" text="Du hast noch keinen Account?" />
               <Button fx:id="registerButton" onAction="#handleRegister" styleClass="btnRegister" text="Registrieren" />
            </HBox>
            <HBox alignment="CENTER_RIGHT">
               <Button fx:id="forgotPasswordButton" onAction="#handleForgotPassword" styleClass="btnForgotPassword" text="Passwort vergessen?" />
            </HBox>
         </children>
      </VBox>
   </bottom>



</BorderPane>
