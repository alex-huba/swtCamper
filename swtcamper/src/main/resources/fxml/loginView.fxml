<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="rootNodeBackground" alignment="CENTER" spacing="30.0"
      stylesheets="/styles/loginview.css" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="swtcamper.javafx.controller.LoginViewController">

    <Label styleClass="heading" text="Login"/>
    <Label styleClass="errorMessage" fx:id="errorLabel"/>

    <HBox alignment="CENTER" spacing="30">
        <VBox spacing="30">
            <Label styleClass="descriptionLabel" text="Nutzername"/>
            <Label styleClass="descriptionLabel" text="Passwort"/>
        </VBox>
        <VBox spacing="13">
            <TextField fx:id="usernameTf" promptText="Nutzername" styleClass="inputField"/>
            <PasswordField fx:id="passwordPf" onKeyReleased="#handleEnterKey" promptText="Passwort"
                           styleClass="inputField"/>
        </VBox>
    </HBox>


    <Button fx:id="loginButton" onAction="#handleLogin" styleClass="loginButton, bg-lightGreen, radius-20, border-0"
            text="Login"/>

    <VBox spacing="20">
        <children>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Label styleClass="descriptionLabel" text="Du hast noch keinen Account?"/>
                <Button fx:id="registerButton" onAction="#handleRegister" styleClass="btnRegister" text="Registrieren"/>
            </HBox>
            <HBox alignment="CENTER_RIGHT">
                <Button fx:id="forgotPasswordButton" onAction="#handleForgotPassword" styleClass="btnForgotPassword"
                        text="Passwort vergessen?"/>
            </HBox>
        </children>
    </VBox>
</VBox>
