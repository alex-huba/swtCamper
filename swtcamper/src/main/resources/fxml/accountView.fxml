<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="accountRootPane" styleClass="rootNodeBackground" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="swtcamper.javafx.controller.AccountViewController">
    <top>
        <ToolBar fx:id="buttonToolbar" prefHeight="40.0" BorderPane.alignment="CENTER">
            <items>
                <Button fx:id="showLogBtn" mnemonicParsing="false" onAction="#showLogForUser" text="Zeige Logs zu diesem Nutzer" />
                <Button fx:id="blockBtn" mnemonicParsing="false" text="Global Blockieren" />
                <Button fx:id="promoteBtn" mnemonicParsing="false" onAction="#promoteUser" text="Befördern" />
                <Button fx:id="degradeBtn" mnemonicParsing="false" onAction="#degradeUser" text="Degradieren" />
                <Separator orientation="VERTICAL" />
                <Button fx:id="logoutBtn" onAction="#logout" text="Logout" />
            </items>
        </ToolBar>
    </top>
    <center>
        <SplitPane fx:id="operatorDashboard" dividerPositions="0.29797979797979796" BorderPane.alignment="CENTER">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                    <children>
                        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <Label text="Log History" />
                                <ListView fx:id="logListView" prefHeight="1000.0" />
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                    <children>
                        <SplitPane dividerPositions="0.5" orientation="VERTICAL" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <items>
                                <AnchorPane minHeight="0.0" minWidth="0.0">
                                    <children>
                                        <VBox AnchorPane.bottomAnchor="-0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <children>
                                                <Label text="Nutzer" />
                                                <ListView fx:id="usersListView" />
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                                <AnchorPane minHeight="0.0" minWidth="0.0">
                                    <children>
                              <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                 <children>
                                                  <Label text="Beschwerden über Nutzer">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font></Label>
                                                  <VBox fx:id="reportVBox" spacing="5.0" style="-fx-background-color: white;">
                                       <padding>
                                          <Insets left="5.0" right="5.0" />
                                       </padding></VBox>
                                 </children>
                              </VBox>
                                    </children>
                                </AnchorPane>
                            </items>
                        </SplitPane>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>
